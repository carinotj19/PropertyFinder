<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Account">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bg_view" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Account"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/user_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_below="@id/app_name"
        android:gravity="center"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:src="@drawable/person"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />

            <ImageView
                android:id="@+id/addIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@id/profileImage"
                android:layout_alignBottom="@id/profileImage"
                android:src="@drawable/add_icon"
                android:background="@drawable/white_round_button" />
        </RelativeLayout>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImage"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:text="User Name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/applied"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 applied"
                android:textStyle="bold"
                android:textColor="@color/darkGrey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:text="|"
                android:textStyle="bold"
                android:textColor="@color/darkGrey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/userInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vigan city"
                android:textStyle="bold"
                android:textColor="@color/darkGrey"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_profile"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp" />

    <LinearLayout
        android:id="@+id/menuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_margin="5dp"
            android:id="@+id/edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="18sp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            app:drawableStartCompat="@drawable/edit_profile_icon" />

        <TextView
            android:layout_margin="5dp"
            android:id="@+id/notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textSize="18sp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            app:drawableStartCompat="@drawable/notifications_icon" />

        <TextView
            android:layout_margin="5dp"
            android:id="@+id/recent_viewed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Viewed"
            android:textSize="18sp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            app:drawableStartCompat="@drawable/recent_viewed_icon" />

        <TextView
            android:layout_margin="5dp"
            android:id="@+id/get_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Help"
            android:textSize="18sp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            app:drawableStartCompat="@drawable/help_icon" />

        <TextView
            android:layout_margin="5dp"
            android:id="@+id/about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="18sp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            app:drawableStartCompat="@drawable/about_icon" />

        <TextView
            android:layout_margin="5dp"
            android:id="@+id/sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:textSize="18sp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            app:drawableStartCompat="@drawable/sign_out_icon" />

    </LinearLayout>
</RelativeLayout>