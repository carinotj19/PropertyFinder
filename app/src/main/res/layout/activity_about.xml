<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".About">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:fontFamily="@font/lato_bold"
                android:textStyle="bold"
                android:textColor="@color/colorPurple"
                android:textSize="32sp"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/back_button" />

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/back_icon"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_centerVertical="true"
                app:tint="@color/colorPurple" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_below="@id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- App Logo -->
            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/search_icon"
                android:layout_gravity="center"
                app:tint="@color/colorPurple" />

            <!-- App Name -->
            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Property Finder"
                android:textSize="18sp"
                android:textColor="@color/colorPurple"
                android:fontFamily="@font/lato_black"
                android:layout_gravity="center"
                android:layout_marginTop="8dp" />

            <!-- App Version -->
            <TextView
                android:id="@+id/appVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.0"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <!-- App Description -->
        <TextView
            android:id="@+id/appDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headerLayout"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:text="Welcome to Property Finder, your one-stop solution for all your property needs! Whether you're looking to buy, sell, rent, or simply explore real estate options, our app is designed to make your property journey seamless and enjoyable."
            android:textSize="16sp" />

        <!-- Features Section -->
        <TextView
            android:id="@+id/featuresSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appDescription"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:text="Features"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- List of Features -->
        <LinearLayout
            android:id="@+id/featuresList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/featuresSection"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Find Your Dream Property"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="~ Discover a diverse range of properties listed on our platform. From cozy apartments to spacious houses and commercial spaces, we have a property for every need."
                android:textSize="14sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Buy Your Home Sweet Home:"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="~ Ready to take the plunge into homeownership? Browse through a curated selection of homes for sale. Utilize our interactive maps and virtual tours to get a feel for the neighborhood and property layout."
                android:textSize="14sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Personalized Notifications:"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="~ Receive instant notifications for new properties that match your criteria. Stay ahead in the competitive real estate market and never miss out on a great opportunity."
                android:textSize="14sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Secure Messaging:"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="~ Communicate with property owners, buyers, and renters securely within the app. Ask questions, negotiate terms, and finalize deals with peace of mind."
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Credits Section -->
        <TextView
            android:id="@+id/creditsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/featuresList"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:text="Credits"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- List of Credits -->
        <LinearLayout
            android:id="@+id/creditsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/creditsSection"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Sample Credit Items -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Icon designed by John Doe"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Background image courtesy of Jane Smith"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Add more credit items as needed -->

        </LinearLayout>
    </RelativeLayout>
</ScrollView>